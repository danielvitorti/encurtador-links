<!DOCTYPE html>
<html>
	<head>
		<title>@ViewBag.Title</title>
		<link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css">
		<script src="@Url.Content("~/Scripts/modernizr-2.5.3.js")" type="text/javascript"></script>
		<script src="@Url.Content("~/Scripts/jquery-1.7.2.min.js")" type="text/javascript"></script>
		<script src="@Url.Content("~/Scripts/scripts.js")" type="text/javascript"></script>
	</head>
	<body>
		<div id="page">
			<header>
				<div id="title">
					<h1>Encurtador de Links</h1>
				</div>
			</header>
			<nav>
				<ul id="menu">
					<li>@Html.ActionLink("Início", "Index", "Home")</li>
					<li>@Html.ActionLink("Links Encurtados", "index", "url")</li>
					<li>@Html.ActionLink("Encurtar Link", "encurtar", "url")</li>
					<li>@Html.ActionLink("Sair", "logout", "login")</li>
				</ul>
			</nav>
			<section id="main">
				@RenderBody()
			</section>
		</div>
	</body>
</html>

@model encurtador_links.Models.Url
@{
	ViewBag.Title = "Encurtar Link/Url";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Encurtar Link/Url</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.urlSite, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10 col-lg-10 col-sm-12 col-xs-12">
                @Html.EditorFor(model => model.urlSite, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.urlSite, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.urlNormal, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10 col-lg-10 col-sm-12 col-xs-12">
                @Html.EditorFor(model => model.urlNormal, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.urlNormal, "", new { @class = "text-danger" })
            </div>
        </div>

       

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Encurtar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>  
    @Html.ActionLink("Listagem", "index")
</div>  
<script language="javascript" type="text/javascript"  src ="~/Scripts/jquery.validate.min.js" />  
<script language="javascript" type="text/javascript" src ="~/Scripts/jquery.validate.unobtrusive.min.js" />  

